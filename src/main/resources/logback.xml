<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT"
              class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{dd.MM.yyyy HH:mm:ss.SSS} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="FILE_1"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/logback_1.log</file>
        <rollingPolicy
                class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logback_1.%d{yyyy-MM-dd}.log</fileNamePattern>

        </rollingPolicy>
        <encoder>
            <pattern>%d{dd.MM.yyyy HH:mm:ss.SSS} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="FILE_2"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/logback_2.log</file>
        <rollingPolicy
                class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logback_2.%d{yyyy-MM-dd}.log</fileNamePattern>

        </rollingPolicy>
        <encoder>
            <pattern>%d{dd.MM.yyyy HH:mm:ss.SSS} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>

    <logger name="task5.controller.PersonController" level="info">
        <appender-ref ref="FILE_1" />
    </logger>

    <logger name="task5.controller.DepartmentController" level="info">
        <appender-ref ref="FILE_2" />
    </logger>

</configuration>